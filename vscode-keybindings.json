[
  {
    "key": "cmd+escape", // ⌘ ⎋
    "command": "runCommands",
    "args": {
      "commands": ["workbench.action.closePanel", "workbench.action.closeSidebar"]
    }
  },
  {
    "key": "ctrl+escape", // ⌃ ⎋
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorTextFocus"
  },

  {
    "key": "alt+w", // ⌥ w
    "command": "workbench.action.closeOtherEditors",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+d", // ⌘ d
    "command": "editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+alt+r", // ⌥⇧ r
    "command": "workbench.action.tasks.reRunTask"
  },

  {
    "key": "cmd+j", // ⌘ j
    "command": "editor.action.nextMatchFindAction",
    "when": "editorFocus"
  },
  {
    "key": "cmd+k", // ⌘ k
    "command": "editor.action.previousMatchFindAction",
    "when": "editorFocus"
  },

  {
    "key": "alt+j", // ⌥ j
    "command": "editor.action.smartSelect.shrink",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+k", // ⌥ k
    "command": "editor.action.smartSelect.expand",
    "when": "editorTextFocus"
  },

  {
    "key": "ctrl+cmd+j", // ⌘⌃ j
    "command": "workbench.action.editor.nextChange",
    "when": "(editorTextFocus && !textCompareEditorActive) || textCompareEditorVisible"
  },
  {
    "key": "ctrl+cmd+k", // ⌘⌃ k
    "command": "workbench.action.editor.previousChange",
    "when": "(editorTextFocus && !textCompareEditorActive) || textCompareEditorVisible"
  },

  {
    "key": "ctrl+alt+j", // ⌥⌃ j
    "command": "editor.action.marker.next",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+alt+k", // ⌥⌃ k
    "command": "editor.action.marker.prev",
    "when": "editorFocus"
  },

  {
    "key": "shift+cmd+j", // ⌘⇧ j
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+cmd+k", // ⌘⇧ k
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },

  {
    "key": "ctrl+alt+cmd+j", // ⌘⌥⌃ j
    "command": "editor.action.insertCursorBelow",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+cmd+k", // ⌘⌥⌃ k
    "command": "editor.action.insertCursorAbove",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+cmd+f", // ⌘⌥⌃ f
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+cmd+enter", // ⌘⌥⌃ ⏎
    "command": "editor.action.insertCursorAtEndOfEachLineSelected",
    "when": "editorTextFocus"
  },

  // f20 - For Karabiner-Elements
  {
    "key": "f20 k",
    "command": "editor.action.insertSnippet",
    "args": { "snippet": "($1) => $0" },
    "when": "editorTextFocus"
  },
  {
    "key": "f20 l",
    "command": "editor.action.insertSnippet",
    "args": { "snippet": "console.log($0)" },
    "when": "editorTextFocus"
  },

  //
  {
    "key": "cmd+t",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+w",
    "command": "workbench.action.terminal.killActiveTab",
    "when": "terminalFocus"
  }
  //
]
